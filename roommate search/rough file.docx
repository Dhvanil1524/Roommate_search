let newbtn=document.createElement("button");
newbtn.innerText="Change mode";
console.log(newbtn);

let div=document.querySelector(".body");
div.after(newbtn);
currmode="Light";

// let navbar=document.querySelector(".navbar");


newbtn.addEventListener("click",()=>{
    if (currmode==="Light"){
        currmode="Dark";
        document.querySelector(".mainbody").style.backgroundColor="black";
        document.querySelector(".mainbody").style.color="white";
        // document.querySelector(".navbar").style.backgroundColor="white";
    }
    else{
        currmode="Light";
        document.querySelector(".mainbody").style.backgroundColor="white";
        document.querySelector(".mainbody").style.color="black";
        // document.querySelector(".navbar").style.backgroundColor="black";
    }
    console.log(currmode);
})

